@model List<TatooWeb.Areas.ControlPanel.Models.SocialConnectionBase>

@{
    ViewBag.Title = "SocialConnection";
    Layout = "~/Areas/ControlPanel/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box messageBox">
            <span class="messageBox"></span>
        </div>
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Social connections
                </div>
                <div class="tools">
                    <a href="javascript:void;" class="collapse"></a>
                </div>
            </div>

            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="btn-group">
                        <a href="/controlpanel/profilepanel/addsocialconnection" class="btn green">
                            Add New <i class="fa fa-plus"></i>
                        </a>
                    </div>
                    <div class="table-toolbar">
                    </div>
                </div>
                <div class="dataTables_wrapper form-inline" role="grid">
                    <div class="table-scrollable">
                        <table style="width: 1060px;" class="table table-striped table-hover table-bordered dataTable">
                            <thead>
                                <tr role="row">
                                    <th style="width: 167px;" colspan="1" rowspan="1" role="columnheader" class="">
                                        Network name
                                    </th>
                                    <th style="width: 334px;" colspan="1" rowspan="1" tabindex="0" role="columnheader">
                                        Link
                                    </th>
                                    <th style="width: 99px;" colspan="1" rowspan="1" tabindex="0" role="columnheader">
                                        Main image
                                    </th>
                                    <th style="width: 99px;" colspan="1" rowspan="1" tabindex="0" role="columnheader">
                                        Hover image
                                    </th>
                                    <th style="width: 99px;" colspan="1" rowspan="1" tabindex="0" role="columnheader">
                                        Update
                                    </th>
                                    <th style="width: 99px;" colspan="1" rowspan="1" tabindex="0" role="columnheader">Delete</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{
                                    var trClass = string.Empty;
                                    var overdue = string.Empty;
                                    var count = 1;
                                    foreach (var con in Model)
                                    {
                                        trClass = count % 2 == 0 ? "even" : "odd";

                                        <tr class="@trClass" id="con-@con.Id">
                                            <td class="text-primary" id="name-@con.Id">@con.NetworkName</td>
                                            <td><a id="link-@con.Id" href="@con.ProfileLink">@con.ProfileLink</a></td>
                                            <td class="con-image">
                                                <img src="@con.MainImage" alt="@con.NetworkName main image" title="@con.NetworkName main image" />
                                            </td>
                                            <td class="con-image">
                                                <img src="@con.HoverImage" alt="@con.NetworkName hover image" title="@con.NetworkName hover image" />
                                            </td>                                            
                                            <td class="">
                                                <a class="delete"
                                                   href="#static"
                                                   data-toggle="modal" onclick="javascript:handler.openEditConnnectionModal(@con.Id)">Edit
                                                </a>
                                            </td>
                                            <td class="">
                                                <a class="delete"
                                                   href="#static"
                                                   data-toggle="modal" onclick="javascript:handler.openDeleteConnnectionModal(@con.Id)">Delete</a>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div id="static" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" aria-hidden="true" data-dismiss="modal"></button>
                                    <h4 class="modal-title">Confirmation</h4>
                                </div>
                                <div class="modal-body">
                                    <p id="modal-message">
                                        <!--Confirm message goes here-->                                      
                                    </p>
                                </div>
                                <div class="modal-footer" id="modal-buttons">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>


