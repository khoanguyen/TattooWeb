@model TatooWeb.Areas.ControlPanel.Models.ArtistBase
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/ControlPanel/Views/Shared/_Layout.cshtml";
}

@section CustomStyle{
    <link rel="stylesheet" type="text/css" href="@Href("~/Content/plugins/bootstrap-fileupload/bootstrap-fileupload.css")" />
}

<div class="portlet box yellow">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-reorder"></i>Update Artist - @Model.FullName
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        @using (Html.BeginForm("edit", "artistpanel", FormMethod.Post, 
                               new { @class = "form-horizontal", enctype = "multipart/form-data", onsubmit = "return handler.artistValidation()" }))
        {   @Html.HiddenFor(i => i.Id)
            @Html.HiddenFor(i => i.Avatar)
            <div class="form-actions top fluid">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn green">Submit</button>
                    <button type="button" class="btn default" onclick="javascript:window.location.href='/controlpanel/artistpanel';">Cancel</button>
                </div>
            </div>
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Avatar
                    </label>
                    <div class="col-md-2">
                        <img src="@Model.Avatar" title="avatar" alt="@Model.FullName avatar" style="width:100%; height:auto; max-width:200px;" />
                    </div>
                    <div class="col-md-7">   
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <input name="" value="" type="hidden">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <span class="uneditable-input">
                                        <i class="fa fa-file fileupload-exists"></i>
                                        <span class="fileupload-preview"></span>
                                    </span>
                                </span>
                                <span class="btn default btn-file">
                                    <span class="fileupload-new">
                                        <i class="fa fa-paper-clip"></i>Select file
                                    </span>
                                    <span class="fileupload-exists">
                                        <i class="fa fa-undo"></i>Change
                                    </span>
                                    <input id="avatar" name="avatar" class="default" type="file" />
                                </span>
                                <a href="#" class="btn green fileupload-exists" data-dismiss="fileupload" onclick="handler.uploadAvatar(@Model.Id, '@Model.FullName');"><i class="fa fa-upload"></i>Upload</a>
                                <a href="#" class="btn red fileupload-exists" data-dismiss="fileupload"><i class="fa fa-trash-o"></i>Remove</a>
                            </div>
                        </div>
                        <span class="help-block">
                            Support file types: jpeg, jpg, png
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Full Name<span class="required"></span></label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(i => i.FullName, new { @class = "form-control maxlengthCheck", @placeholder = "Artist full name - Maximum 50 characters", @maxlength = "50" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Phone No.</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(i => i.PhoneNo, new { @class = "form-control maxlengthCheck", @placeholder = "Artist phone number - Maximum 20 characters", @maxlength = "20" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Default Artist</label>
                    <div class="col-md-9">
                        @Html.CheckBoxFor(i => i.DefaultArtist, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group last">
                    <label class="col-md-3 control-label">Brief Intro</label>
                    <div class="col-md-9">
                        @Html.TextAreaFor(i => i.BriefIntro, new
               {
                   @class = "form-control maxlengthCheck",
                   @placeholder = "Brief introduction about artist - Maximum 200 characters",
                   @rows = "3",
                   @maxlength = "200"
               })
                        <span class="help-block">
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-actions fluid">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn green">Submit</button>
                    <button type="button" class="btn default" onclick="javascript:window.location.href='/controlpanel/artistpanel';">Cancel</button>
                </div>
            </div>
        }
        <!-- END FORM-->
    </div>
</div>